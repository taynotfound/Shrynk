<!-- views/login.ejs -->
<%- include('header', { title: 'Login - Shrynk', user: null }) %>
<div class="flex items-center justify-center h-screen">
    <div class="bg-gray-800 p-8 rounded shadow-md w-11/12 md:w-96">
        <h1 class="text-2xl font-bold mb-4"><i class="material-icons">login</i> Login</h1>
        <form action="/auth/login" method="POST">
            <input type="text" name="username" placeholder="Username" class="border p-2 mb-4 w-full bg-gray-700 text-white" required>
            <input type="password" name="password" placeholder="Password" class="border p-2 mb-4 w-full bg-gray-700 text-white" required>
            <button type="submit" class="bg-purple-600 text-white p-2 rounded w-full flex items-center justify-center">
                <i class="material-icons text-white mr-2">login</i> Login
            </button>
        </form>
        <p class="mt-4">Don't have an account? <a href="/auth/register" class="text-purple-600 hover:underline">Register</a></p>
    </div>
</div>
<%- include('footer') %>